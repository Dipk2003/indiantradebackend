option_settings:
  # Application Environment
  aws:elasticbeanstalk:application:environment:
    # Server Configuration
    SERVER_PORT: 8080
    SPRING_PROFILES_ACTIVE: production
    
    # Database Configuration (RDS)
    SPRING_DATASOURCE_URL: jdbc:mysql://your-rds-endpoint.region.rds.amazonaws.com:3306/itechmart
    SPRING_DATASOURCE_USERNAME: itechmart_user
    SPRING_DATASOURCE_PASSWORD: your-secure-password
    SPRING_DATASOURCE_DRIVER_CLASS_NAME: com.mysql.cj.jdbc.Driver
    
    # JPA Configuration
    SPRING_JPA_HIBERNATE_DDL_AUTO: update
    SPRING_JPA_SHOW_SQL: false
    SPRING_JPA_DATABASE_PLATFORM: org.hibernate.dialect.MySQL8Dialect
    SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL: false
    
    # JWT Configuration
    JWT_SECRET: your-super-secret-jwt-key-for-production-min-256-chars-long
    JWT_EXPIRATION: 86400
    
    # AWS S3 Configuration
    AWS_ACCESS_KEY_ID: your-aws-access-key
    AWS_SECRET_ACCESS_KEY: your-aws-secret-key
    AWS_REGION: us-west-2
    AWS_S3_BUCKET_NAME: itechmart-files
    
    # Email Configuration (SES)
    SPRING_MAIL_HOST: email-smtp.us-west-2.amazonaws.com
    SPRING_MAIL_PORT: 587
    SPRING_MAIL_USERNAME: your-ses-smtp-username
    SPRING_MAIL_PASSWORD: your-ses-smtp-password
    SPRING_MAIL_PROPERTIES_MAIL_SMTP_AUTH: true
    SPRING_MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE: true
    
    # SMS Configuration (SNS)
    AWS_SNS_ACCESS_KEY: your-sns-access-key
    AWS_SNS_SECRET_KEY: your-sns-secret-key
    AWS_SNS_REGION: us-west-2
    
    # Payment Gateway (Razorpay)
    RAZORPAY_KEY_ID: your-razorpay-key-id
    RAZORPAY_KEY_SECRET: your-razorpay-secret
    
    # External APIs
    PAN_VERIFICATION_API_KEY: your-pan-api-key
    GOOGLE_MAPS_API_KEY: your-google-maps-key
    
    # Logging
    LOGGING_LEVEL_ROOT: INFO
    LOGGING_LEVEL_COM_ITECH: INFO
    
    # CORS Configuration
    CORS_ALLOWED_ORIGINS: https://your-frontend-domain.com,https://admin.your-domain.com
    
    # File Upload Configuration
    SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE: 10MB
    SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE: 10MB
    
    # Cache Configuration
    SPRING_CACHE_TYPE: redis
    SPRING_REDIS_HOST: your-elasticache-endpoint.cache.amazonaws.com
    SPRING_REDIS_PORT: 6379
    
  # Instance Configuration
  aws:autoscaling:launchconfiguration:
    InstanceType: t3.medium
    SecurityGroups: sg-your-security-group-id
    
  # Load Balancer Configuration  
  aws:elasticbeanstalk:environment:
    EnvironmentType: LoadBalanced
    LoadBalancerType: application
    
  # Auto Scaling
  aws:autoscaling:asg:
    MinSize: 1
    MaxSize: 4
    
  # Health Check
  aws:elasticbeanstalk:healthreporting:system:
    SystemType: enhanced
    HealthCheckSuccessThreshold: Ok
    
  # Logs
  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: false
    RetentionInDays: 30
