{
  "version": 2,
  "builds": [
    {
      "src": "pom.xml",
      "use": "@vercel/java"
    }
  ],
  "routes": [
    {
      "src": "/actuator/(.*)",
      "dest": "/actuator/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/health",
      "dest": "/health"
    },
    {
      "src": "/status",
      "dest": "/status"
    },
    {
      "src": "/",
      "dest": "/"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "SPRING_PROFILES_ACTIVE": "vercel"
  },
  "functions": {
    "target/itech-backend-0.0.1-SNAPSHOT.jar": {
      "runtime": "java11"
    }
  },
  "buildCommand": "./mvnw clean package -DskipTests"
}
