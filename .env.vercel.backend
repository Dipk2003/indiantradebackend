# Vercel Backend Environment Variables
# Add these to your Vercel project settings

# Profile
SPRING_PROFILES_ACTIVE=vercel

# Database Configuration (PostgreSQL)
# You can use Vercel Postgres, Supabase, or any other PostgreSQL provider
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-make-it-long-and-random
JWT_EXPIRATION=86400000

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://www.your-frontend-domain.vercel.app,http://localhost:3000

# Email Configuration (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Cloud Storage (AWS S3) - Required for Vercel
AWS_S3_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# External APIs
QUICKO_API_BASE_URL=https://api.quicko.com
QUICKO_API_KEY=your_quicko_api_key
QUICKO_API_ENABLED=true

# Verification APIs
GST_API_URL=https://api.gst-verification.com
GST_API_KEY=your_gst_api_key
PAN_API_URL=https://api.pan-verification.com
PAN_API_KEY=your_pan_api_key

# Additional Configuration
PORT=8080
NODE_ENV=production
