# DATABASE_URL=postgresql://username:password@hostname:5432/database_name
# JDBC_DATABASE_URL=jdbc:postgresql://hostname:5432/database_name
# JDBC_DATABASE_USERNAME=username
# JDBC_DATABASE_PASSWORD=password

